<table class="table is-striped">
  <thead>
    <th><%= attr_name(@authors, :id) %></th>
    <th><%= attr_name(@authors, :author_name) %></th>
    <th><%= attr_name(@authors, :country) %></th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.id %></td>
        <td><%= author.author_name %></td>
        <td><%= author.country %></td>
        <td>
          <%= link_to t('admin.common.show'), admin_author_path(author.id), class: "button is-primary" %>
        </td>
        <td>
          <%= link_to t('admin.common.edit'), edit_admin_author_path(author.id), class: "button is-warning"%>
        </td>
        <td>
          <%= link_to t('admin.common.delete'), admin_author_path(author.id), method: :delete, class: "button is-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @authors %>
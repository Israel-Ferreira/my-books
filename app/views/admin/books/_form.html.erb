<%= form_with model: [:admin, @book], local: true do |f| %>
  <div class="field">
    <%= f.label :title, class: "label" %>
    <div class="control">
      <%= f.text_field :title, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :isbn, class: "label" %>
    <div class="control">
      <%= f.text_field :isbn, class: "input",  size: 13%>
    </div>
  </div>
  <div class="field">
    <%= f.label :launch_year, class: "label" %>
    <div class="control">
      <%= f.number_field :launch_year, class: "input", step: 1, min: 0, max: DateTime.now.year %>
    </div>
  </div>
  <div class="field">
    <%= f.label :author, class: "label" %>
    <div class="select">
      <%= f.select :author_id, @authors, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :category, class: "label" %>
    <div class="select">
      <%= f.select :category_id, @categories, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :publisher, class: "label" %>
    <div class="select">
      <%= f.select :publisher_id, @publishers, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :images, class: "label" %>
    <div class="control">
      <%= f.file_field :images, multiple: true %>
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <%= f.submit 'Criar', class: 'button is-link' %>
    </div>
    <div class="control">
      <%= link_to 'Voltar', admin_books_path, class: 'button is-link is-light' %>
    </div>
  </div>
<% end %>
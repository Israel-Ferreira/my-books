<table class="table is-striped">
  <thead>
    <th><%= attr_name(@users, :id) %></th>
    <th><%= attr_name(@users, :full_name) %></th>
    <th><%= attr_name(@users, :email) %></th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to t('admin.common.show'), admin_user_path(user.id), class: "button is-primary" %>
        </td>
        <td>
          <%= link_to t('admin.common.edit'), edit_admin_user_path(user.id), class: "button is-warning"%>
        </td>
        <% unless current_user == user %>
          <td>
            <%= link_to t('admin.common.delete'), admin_user_path(user.id), method: :delete, class: "button is-danger" %>
          </td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
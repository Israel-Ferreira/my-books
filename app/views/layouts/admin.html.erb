<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Biblioteca Rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin' %>
  </head>

  <body>
    <nav class="navbar is-dark">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to "MyBooks", admin_home_index_path, class: "navbar-item brand-text" %>

          <div class="navbar-burger burger" data-target="navMenu">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
        <div id="navMenu" class="navbar-menu">
          <div class="navbar-start">
            <%= link_to "Autores", admin_authors_path, class: "navbar-item" %>
            <a class="navbar-item" href="admin.html">
              Orders
            </a>
            <a class="navbar-item" href="admin.html">
              Payments
            </a>
            <a class="navbar-item" href="admin.html">
              Exceptions
            </a>
            <a class="navbar-item" href="admin.html">
              Reports
            </a>
          </div>
        </div>
        <div class="navbar-end">
          <% if user_signed_in? %>
            <div class="navbar-item">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button is-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="columns">
        <div class="column is-3">
          <aside class="menu is-hidden-mobile">
            <p class="menu-label">Geral</p>
            <ul class="menu-list">
              <li>
                <%= link_to "Autores", admin_authors_path %>
              </li>
            </ul>
          </aside>
        </div>
        <div class="column is-9">
          <%= yield %>
        </div>
      </div>

    </div>

  </body>

</html>